<div class="row">
  <div class="col-lg-6 col-md-10 mt-5 mx-auto">
    <h2>Sign in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :email, for: "user_email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email@example.com', class: "form-control", id:"user_email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, for: "user_password" %>
        <div class="input-group password-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: '••••••••', class: "form-control", id: "user_password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-4">
          <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
          <%= f.label :remember_me, class: "form-check-label", for: "rememberMe" %>
        </div>
      <% end %>

      <div class="text-center mb-4">
        <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
