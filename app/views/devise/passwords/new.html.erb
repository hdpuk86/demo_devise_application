<div class="row">
  <div class="col-lg-6 col-md-10 mt-5 mx-auto">
    <h2>Forgotten your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, for: "email_forgotten_password" %>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email@example.com', class: "form-control", id: "email_forgotten_password" %>
      </div>

      <div class="text-center mb-4">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
