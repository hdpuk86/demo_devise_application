<div class="row">
  <div class="col-lg-6 col-md-10 mt-5 mx-auto">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :new_password, for: "edit_password" %>

        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>

        <div class="input-group password-group">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: '••••••••', class: "form-control", id: "edit_password" %>
        </div>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password_confirmation, "Confirm new password", for: "confirm_new_password" %>

        <div class="input-group password-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '••••••••', class: "form-control", id: "confirm_new_password" %>
        </div>
      </div>

      <div class="text-center mb-4">
        <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
